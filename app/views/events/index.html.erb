<!DOCTYPE html>
<html>

<body>

  <div id="index-entry-box">
    <div id="no-opacity">
      <h2><%= @random_quote %></h2>
      <div class = "button_color" %>
      	<h6>
      	<%= form_for @event do |f| %>
      		<% if @event.errors.any? %>
      			<div class = "errors">
      				<% for error in @event.error.full_messages %>
      				<% end %>
      			</div>
      		<% end %>
      		<p><%= f.text_field :location, required: true, placeholder:"94103 or London", size: 30 %></p>
      		<p><%= f.submit "go", class: "go_button_design" %></p>
      	<% end %>
      	</h6>
      </div>
    </div>
  </div>

	<video autoplay loop muted class="bgvideo" id="bgvideo">
		<source src="https://s3.amazonaws.com/won.hong.bucket/FrontEnd.mp4" type="video/mp4">
	</video>	

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to('About Weekend-Plan.com', events_about_path) %></li>
          <li><%= link_to('Developer Profile', events_profile_path) %></li>
        </ul>
      </div>
    </div>
  </nav>

</body>

</html>
